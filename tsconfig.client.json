{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "build/client",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "es6", "es2016"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",    
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "config",
    "src/server"
  ]
}
